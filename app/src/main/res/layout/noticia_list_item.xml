<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/altura_linha_padrao"
    android:paddingEnd="@dimen/espacamento_padrao"
    android:paddingLeft="@dimen/espacamento_padrao"
    android:paddingRight="@dimen/espacamento_padrao"
    android:paddingStart="@dimen/espacamento_padrao"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/textColorNoticiaTitulo"
            android:textSize="@dimen/tamanho_titulo"
            tools:text="30km S of" />

        <TextView
            android:id="@+id/autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/textColorNoticiaSecao"
            android:textSize="@dimen/tamanho_secao"
            tools:text="Camila Bressan"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/secao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/textColorNoticiaSecao"
            android:textSize="@dimen/tamanho_secao"
            tools:text="Long placeholder location that should wrap to more than 2 lines of text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/textColorNoticiaSecao"
            android:textSize="@dimen/tamanho_secao"
            tools:text="Mar 6, 2010" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/textColorNoticiaSecao"
            android:textSize="@dimen/tamanho_secao"
            tools:text="3:00 PM" />

    </LinearLayout>
</LinearLayout>